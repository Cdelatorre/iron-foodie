<form action="/restaurants" method="GET" class="mb-3">
  <input name="search" type="text" class="form-control" placeholder="Search">
</form>

<div class="row">
{{#each restaurants as |restaurant|}}
  <div class="col-4 d-flex">
    <div class="card my-3 position-relative">
      <img src="{{restaurant.image}}" class="card-img-top">
      
      {{#restaurantIsOwnerBy user=../currentUser restaurant=restaurant }}
        <div class="position-absolute top-0 end-0 p-3">
          <div class="d-flow bg-light rounded-pill">
            <a href="/restaurants/{{restaurant.id}}/edit" class="btn btn-link text-secondary"><i class="fa fa-edit"></i></a>
            <a href="/restaurants/{{restaurant.id}}/delete" class="btn btn-link text-danger"><i class="fa fa-times"></i></a>
          </div>
        </div>
      {{/restaurantIsOwnerBy}}
      
      <div class="card-body d-flex flex-column justify-content-between">
        <div>
          <h5 class="card-title">{{restaurant.name}}</h5>
          <p class="card-text">{{restaurant.description}}</p>
        </div>
        <div class="d-grid mt-2">
          <a href="/restaurants/{{restaurant.id}}" class="btn btn-sm btn-primary">Detail</a>
        </div>
      </div>
    </div>
  </div>
{{/each}}
</div>
